{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}All Users{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            {% include 'admin/_embed/_card/_header_action.html.twig' with {
                'sectionTitle': 'Users',
                'actionUrl': path('admin_user_add')
            } %}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="main_table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Profile info</th>
                        <th>Is verified email</th>
                        <th>From facebook</th>
                        <th>From google</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    {{ user.id }}
                                </td>
                                <td>
                                    {{ user.email }}
                                </td>
                                <td>
                                    {% if "ROLE_ADMIN" in user.roles %}
                                        <strong>Admin</strong>
                                    {% else %}
                                        User
                                    {% endif %}
                                    <br/>
                                    <small>{{ user.roles|join(', ', ' and ') }}</small>
                                </td>
                                <td>
                                    Full name: {{ user.fullName }}<br/>
                                    Phone: {{ user.phone }}<br/>
                                    Address: {{ user.address }}<br/>
                                    Zip code: {{ user.zipcode }}
                                </td>
                                <td>
                                    {% if user.isVerified %}
                                        verified
                                    {% else %}
                                        not verified
                                    {% endif %}
                                </td>
                                <td>{% if user.facebookId %}+{% endif %}</td>
                                <td>{% if user.googleId %}+{% endif %}</td>
                                <td>
                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-info">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
